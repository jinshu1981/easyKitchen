<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xuzhi.easykitchen.AddNewRecipeActivityFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <ListView
        android:id="@+id/custom_recipes_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/lightgray"
        android:id="@+id/textview_4"/>
    <Button
        android:id="@+id/button_add"
        android:text="添加新菜谱"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"/>


    <TextView android:text="@string/recipe_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/textview_1"
        android:background="@drawable/textview_border"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_recipe_name"
        android:layout_gravity="center"
        android:gravity="top"
        android:visibility="gone"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>


    <TextView android:text="@string/recipe_material" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/textview_2"
        android:background="@drawable/textview_border"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_recipe_material"
        android:layout_gravity="center"
        android:gravity="top"
        android:visibility="gone"
        android:singleLine="false"
        android:scrollHorizontally="false"
        android:minLines="2"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView android:text="@string/recipe_steps" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/textview_3"
        android:background="@drawable/textview_border"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_recipe_steps"
        android:layout_gravity="center"
        android:gravity="top"
        android:visibility="gone"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:scrollHorizontally="false"
        android:background="@drawable/edittext_border"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:id="@+id/button_confirm"
        android:text="确定"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"/>
</LinearLayout>

