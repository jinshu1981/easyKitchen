<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.xuzhi.easykitchen.SelectedRecipesActivityFragment">
    <TextView
        android:id="@+id/hintText"
        android:text="还没有你想做的菜哦！请回首页挑菜谱"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/selected_recipes_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/seagreen">
        <TextView
            android:id="@+id/recipesCount"
            android:text="共计3道菜"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/timeConsuming"
            android:text="耗时100分钟"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/generateMenu"
            android:text="确定菜单"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
