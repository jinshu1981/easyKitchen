<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xuzhi.easykitchen.UpdateMaterialActivityFragment">

    <!-- Rows with 3 columns -->
    <TableRow
        android:id="@+id/tableRow0"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/row_border">

        <TextView
            android:id="@+id/positon_00"
            android:text="食材"
            android:layout_weight="1"
            android:padding="10sp"
            android:gravity="center"
            android:background="@drawable/column_border"/>

        <TextView
            android:id="@+id/positon_01" android:text="吃完了"
            android:layout_weight="1"
            android:padding="10sp"
            android:gravity="center"
            android:background="@drawable/column_border"/>

        <TextView
            android:id="@+id/postion_02" android:text="再买"
            android:layout_weight="1"
            android:padding="10sp"
            android:gravity="center"
            android:background="@drawable/column_border"/>

    </TableRow>


</TableLayout>
